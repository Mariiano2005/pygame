import pygame
import random

# Inicializar Pygame
pygame.init()

# Configuración de la pantalla
WIDTH, HEIGHT = 800, 600
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Esquiva al enemigo")

# Colores
WHITE = (255, 255, 255)
RED = (255, 0, 0)

# Personaje
player_size = 50
player_x = (WIDTH - player_size) // 2
player_y = HEIGHT - 2 * player_size
player_speed = 5

# Enemigo
enemy_size = 50
enemy_x = random.randint(0, WIDTH - enemy_size)
enemy_y = 0
enemy_speed = 5

# Reloj
clock = pygame.time.Clock()

# Puntuación
score = 0

# Game loop
running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # Mover al jugador
    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and player_x > 0:
        player_x -= player_speed
    if keys[pygame.K_RIGHT] and player_x < WIDTH - player_size:
        player_x += player_speed

    # Mover al enemigo
    enemy_y += enemy_speed

    # Verificar colisión
    if player_x < enemy_x + enemy_size and player_x + player_size > enemy_x:
        if player_y < enemy_y + enemy_size and player_y + player_size > enemy_y:
            print("¡Colisión!")
            running = False

    # Dibujar en la pantalla
    screen.fill(WHITE)
    pygame.draw.rect(screen, RED, (player_x, player_y, player_size, player_size))
    pygame.draw.rect(screen, RED, (enemy_x, enemy_y, enemy_size, enemy_size))

    # Actualizar la pantalla
    pygame.display.update()

    # Controlar la velocidad del juego
    clock.tick(30)

    # Si el enemigo sale de la pantalla, restablecer su posición y aumentar la puntuación
    if enemy_y > HEIGHT:
        enemy_x = random.randint(0, WIDTH - enemy_size)
        enemy_y = 0
        score += 1

# Fin del juego
print("Puntuación final:", score)
pygame.quit()
